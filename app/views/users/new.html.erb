<%= form_for @user do |f| %>
  <div class="col-8 mx-auto">
    <div class="card">
      <div class="card-header text-center">
        <h3>Signup</h3>
      </div>
      <div class="card-body text-right">
        <%= render "layouts/error", obj: @user%>
        <div class="form-group row">
          <%= f.label :name, class:"col-sm-4 col-form-label"%>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control"%>
        </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class:"col-sm-4 col-form-label"%>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control"%>
        </div>
        </div>
      
        <div class="form-group row">
            <%= f.label :password, class:"col-sm-4 col-form-label"%>
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control"%>
          </div>
        </div>
     
        <div class="form-group row">
          <%= f.label :password_confirmation, class:"col-sm-4 col-form-label"%>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class: "form-control"%>
        </div>
       </div>
    </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-sm-4">
        <strong><%= link_to "Back", root_path, class: "btn btn-secondary btn-block"%></strong>
      </div>
      <div class="col-sm-4">
        <strong><%= f.submit "signup",  class: "btn btn-primary btn-block"%></strong>
      </div>
    </div> 
  
<% end %>



